{
  "extends": [
    "next/core-web-vitals",
    "plugin:tailwindcss/recommended"
  ],
  "rules": {
    "tailwindcss/no-custom-classname": "off",
    "no-unused-vars": [
      "error",
      {
        "varsIgnorePattern": "^_",
        "argsIgnorePattern": "^_"
      }
    ],
    "react/self-closing-comp": "error"
  },
  "settings": {
    "tailwindcss": {
      "calles": [
        "className",
        "cn"
      ],
      "config": "./tailwind.config.js"
    }
  }
}